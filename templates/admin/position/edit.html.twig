{% extends "admin/base_admin.html.twig" %}

{% block body %}
 
 <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12 mb-3">
                <a class="btn btn-dark" href="{{ path('position_index') }}"><i class="fas fa-arrow-left"></i> Return</a>
            </div>
            <div class="col-12">
                <div class="card card-frame">
                    <div class="card-header">
                        <h3><i class="fas fa-plus-circle"></i> Edit a Position</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_row(form.name) }}

                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.activeLeft)}}</div>
                            <div class="col-md-6">{{ form_row(form.activeRight)}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp1)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp2)}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp3)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp4)}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.stopLoss)}}</div>
                            <div class="col-md-6">{{ form_row(form.price)}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.action)}}</div>
                            <div class="col-md-6">
                                {{ form_row(form.publishedAt,{'attr': { 'class' : "datepicker",'onfocus': 'focused(this)','onfocusout' : 'defocused(this)' } }) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info">Save</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

