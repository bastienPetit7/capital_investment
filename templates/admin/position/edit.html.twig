{% extends "admin/base_admin.html.twig" %}

{% block body %}
 
 <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card card-frame">
                    <div class="card-header">
                        <h3><i class="fas fa-plus-circle"></i> Edit a Position</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_row(form.name) }}

                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp1)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp2)}}</div>
                    
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp3)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp4)}}</div>
                    
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp5)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp6)}}</div>
                    
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.tp7)}}</div>
                            <div class="col-md-6">{{ form_row(form.tp8)}}</div>
                    
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(form.stopLoss)}}</div>
                            <div class="col-md-6">{{ form_row(form.sellAt)}}</div>
                    
                        </div>
                        
                        {{ form_row(form.isActive) }}
                        

                     

                        <div class="d-flex">
                            <button type="submit" class="btn btn-info">Update Position</button>
                            {{ form_end(form) }}

                            <form method="post" action="{{ path('position_delete', {'id': position.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ position.id) }}">
                                <button class="btn ms-3 btn-danger">Delete Position</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

