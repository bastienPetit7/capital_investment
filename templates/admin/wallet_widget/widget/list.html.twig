{% extends "admin/base_admin.html.twig" %}

{% block body %}

    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5>Widget</h5>
                        <a class="btn btn-dark" href="{{ path('admin_widget_create') }}"><i class="fas fa-plus"></i> Add</a>
                    </div>
                    <div class="card-body bg-gradient-info">
                        {% if widgets | length > 0 %}
                            <div class="row">
                                {% for widget in widgets %}
                                    <div class="col-sm-12 col-md-6 col-lg-4 mt-4">

                                        <div class="card">
                                            <div class="card-header  ">
                                                <h4>
                                                    {{ widget.name }}
                                                </h4>
                                                {% if widget.isPublished %}

                                                    <div>
                                                        <span class="badge badge-success me-2">Published</span>
                                                    </div>

                                                {% else %}

                                                    <div>
                                                        <span class="badge badge-danger me-2">Unpublished</span>
                                                    </div>

                                                {% endif %}
                                            </div>
                                            <div class="card-body">
                                                <p>
                                                    {{ widget.widgetTheme.name }}
                                                </p>

                                                <a href="{{ path('admin_widget_set',{'id': widget.id}) }}" class="btn btn-dark"><i class="fas fa-cog"></i> Config the widget</a>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No Widget</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}