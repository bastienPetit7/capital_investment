{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12 ">
                <a class="btn btn-dark" href="{{ path('admin_widget_code_list') }}"><i class="fas fa-arrow-left"></i> Return</a>
            </div>
            <div class="col-12 mt-3">
                <div class="card card-frame">
                    <div class="card-header">
                        <h3><i class="fas fa-pen"></i> Edit widget code</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-info">Edit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-12 mt-3">
                <a type="button" data-bs-toggle="modal" data-bs-target="#modal-form-delete-widget" class="btn btn-danger">Delete the code</a>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-form-delete-widget" tabindex="-1" role="dialog" aria-labelledby="modal-form-delete-widget" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div class="card card-plain">
                        <div class="card-header pb-0 text-left d-flex justify-content-between">
                            <h3 class="font-weight-bolder text-info text-gradient">Are you sure to delete the code ?</h3>
                            <button type="button" class="btn-close text-black" data-bs-dismiss="modal" aria-label="Close" style="color: black !important;">
                                <span aria-hidden="true" class="text-black">&times;</span>
                            </button>
                        </div>
                        <div class="card-body">
                           <p>If you delete the code, it will be deleted from all the widget.</p>
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-secondary mt-1"  data-bs-dismiss="modal">Cancel</a>
                                <a class="btn btn-danger mt-1" href="{{ path('admin_widget_code_delete',{'id': widgetCode.id}) }}">Yes, Delete the code</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}