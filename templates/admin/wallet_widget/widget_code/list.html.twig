{% extends "admin/base_admin.html.twig" %}

{% block body %}

    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5>Widget Codes</h5>
                        <a class="btn btn-dark" href="{{ path('admin_widget_code_create') }}"><i class="fas fa-plus"></i> Add</a>
                    </div>
                    <div class="card-body bg-gradient-info">
                        {% if widgetCodes | length > 0 %}
                            <div class="row">
                                <div class="navigation">
                                    {{ knp_pagination_render(widgetCodes) }}
                                </div>
                                {% for code in widgetCodes %}
                                    <div class="col-sm-6 col-md-6 col-lg-4 mt-4">
                                        <div class="card">
                                            <div class="card-header">
                                                <h5>{{ code.name }}</h5>
                                            </div>
                                            <div class="card-body">
                                                <p>Display Name : <strong>{{ code.displayName }}</strong></p>
                                            </div>
                                            <div class="card-footer">
                                                <a class="btn btn-info w-100" href="{{ path('admin_widget_code_edit',{'id': code.id}) }}"><i class="fas fa-edit"></i> Edit</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No Widget Code</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}