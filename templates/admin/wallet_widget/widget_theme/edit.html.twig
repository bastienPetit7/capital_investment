{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12 ">
                <a class="btn btn-dark" href="{{ path('admin_widget_wallet_theme_list') }}"><i class="fas fa-arrow-left"></i> Return</a>
            </div>
            <div class="col-12 mt-3">
                <div class="card card-frame">
                    <div class="card-header">
                        <h3><i class="fas fa-plus-circle"></i> Edit Wallet : {{ widgetTheme.name }}</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-info" id="buttonValid"><i class="fas fa-pen"></i> Edit</button>
                        <button class="btn btn-info" type="button" disabled style="display: none;color: white;" id="buttonSpinner">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true" style="color: white;"></span>
                            Loading...
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-12 mt-3">
                <div class="card card-frame">
                    <div class="card-header d-flex justify-content-between">
                        <h3>Widgets Link to the theme</h3>
                        <a class="btn btn-dark" href="{{ path('admin_widget_create',{'id': widgetTheme.id}) }}"><i class="fas fa-plus"></i> Add a widget</a>
                    </div>
                    <div class="card-body bg-gradient-info">
                        {% if widgetTheme.widgets | length > 0 %}
                            <div class="row">
                                {% for widget in widgetTheme.widgets %}
                                    <div class="col-sm-12 col-md-6 col-lg-4 mt-4">

                                        <div class="card">
                                            <div class="card-header  border-bottom border-info">
                                                <h4>
                                                    {{ widget.name }}
                                                </h4>
                                            </div>
                                            <div class="card-body">
                                                <p>
                                                    {{ widget.widgetTheme.name }}
                                                </p>
                                                <a href="{{ path('admin_widget_set',{'id': widget.id}) }}" class="btn btn-dark"><i class="fas fa-cog"></i> Config the widget</a>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-white" style="color: white !important;">No Widget</p>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>
    </div>





{% endblock %}