<div class="col-12 col-md-6  mt-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Wallet Initial Amount</h6>
        </div>
        <div class="card-body p-3">
            <h6 class="text-uppercase text-body text-xs font-weight-bolder">
                {% if investor.wallet.currency is same as "€" %}
                    {{ investor.wallet.initialAmount | priceInEuros }}
                {% elseif investor.wallet.currency is same as "$" %}
                    {{ investor.wallet.initialAmount | priceInDollar }}
                {% elseif investor.wallet.currency is same as "CHF" %}
                    {{ investor.wallet.initialAmount | priceInFranc }}
                {% endif %}
            </h6>
        </div>
    </div>
</div>
