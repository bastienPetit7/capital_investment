{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12">
                <div class="card card-frame">
                    <div class="card-header">
                        <h3><i class="fas fa-plus-circle"></i> Add an Investor Profile</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.telephone) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.createdAt,{'attr': { 'class' : "datepicker",'onfocus': 'focused(this)','onfocusout' : 'defocused(this)' } }) }}
                        </div>

                        <button type="submit" class="btn btn-info" id="buttonValid">Save</button>
                        <button class="btn btn-info" type="button" disabled style="display: none;color: white;" id="buttonSpinner">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true" style="color: white;"></span>
                            Loading...
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="{{ asset('theme/assets/js/plugins/flatpickr.min.js') }}"></script>
    <script>
        if (document.querySelector('.datepicker')) {
            flatpickr('.datepicker', {
                mode: "single"
            });
        }
    </script>


{% endblock %}