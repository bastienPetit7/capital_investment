<div class="modal fade" id="modal-form-withdrawal" tabindex="-1" role="dialog" aria-labelledby="modal-form-withdrawal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h3 class="font-weight-bolder text-info text-gradient">Withdrawal Amount</h3>
                        <p class="mb-0">Enter an amount</p>
                    </div>
                    <div class="card-body">
                        {{ form_start(formWithdrawalAmount,{'attr': {'action': path('admin_investor_profile_handle_wallet_edit_withdrawal',{ 'id' : wallet.id }) } } ) }}

                        <div class="mb-3">
                            {{ form_label(formWithdrawalAmount.month) }}
                            {{ form_widget(formWithdrawalAmount.month) }}
                            <div class="form-error" id="modal-form-withdrawal">
                                {{ form_errors(formWithdrawalAmount.month) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(formWithdrawalAmount.year) }}
                            {{ form_widget(formWithdrawalAmount.year) }}
                            <div class="form-error" id="modal-form-withdrawal">
                                {{ form_errors(formWithdrawalAmount.year) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(formWithdrawalAmount.amount) }}
                            {{ form_widget(formWithdrawalAmount.amount) }}
                            <div class="form-error" id="modal-form-withdrawal">
                                {{ form_errors(formWithdrawalAmount.amount) }}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info" id="buttonEditWithdrawal">Edit</button>
                        <button class="btn btn-info" type="button" disabled style="display: none;color: white;" id="buttonSpinnerWithdrawal">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true" style="color: white;"></span>
                            Loading...
                        </button>
                        {{ form_end(formWithdrawalAmount) }}

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const buttonEditWithdrawal = document.getElementById('buttonEditWithdrawal');
    const buttonSpinnerWithdrawal = document.getElementById('buttonSpinnerWithdrawal');

    if(buttonEditWithdrawal)
    {
        buttonEditWithdrawal.addEventListener('click', () => {
            buttonEditWithdrawal.style.display = 'none';
            buttonSpinnerWithdrawal.style.display = 'initial';
        });
    }
</script>