<div class="modal fade" id="modal-form-deposit" tabindex="-1" role="dialog" aria-labelledby="modal-form-deposit" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h3 class="font-weight-bolder text-info text-gradient">Deposit Amount</h3>
                        <p class="mb-0">Enter an amount</p>
                    </div>
                    <div class="card-body">
                        {{ form_start(formDepositAmount) }}


                        <div class="mb-3">
                            {{ form_label(formDepositAmount.month) }}
                            {{ form_widget(formDepositAmount.month) }}
                            <div class="form-error" id="modal-form-deposit">
                                {{ form_errors(formDepositAmount.month) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(formDepositAmount.year) }}
                            {{ form_widget(formDepositAmount.year) }}
                            <div class="form-error" id="modal-form-deposit">
                                {{ form_errors(formDepositAmount.year) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(formDepositAmount.amount) }}
                            {{ form_widget(formDepositAmount.amount) }}
                            <div class="form-error" id="modal-form-deposit">
                                {{ form_errors(formDepositAmount.amount) }}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info" id="buttonEditDeposit">Edit</button>
                        <button class="btn btn-info" type="button" disabled style="display: none;color: white;" id="buttonSpinnerDeposit">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true" style="color: white;"></span>
                            Loading...
                        </button>
                        {{ form_end(formDepositAmount) }}

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const buttonEditDeposit = document.getElementById('buttonEditDeposit');
    const buttonSpinnerDeposit = document.getElementById('buttonSpinnerDeposit');

    if(buttonEditDeposit)
    {
        buttonEditDeposit.addEventListener('click', () => {
            buttonEditDeposit.style.display = 'none';
            buttonSpinnerDeposit.style.display = 'initial';
        });
    }
</script>