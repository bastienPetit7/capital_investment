{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">

        <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('{{ asset('theme/assets/img/curved-images/curved14.jpg') }}'); background-position-y: 50%;">
            <span class="mask bg-gradient-info opacity-6"></span>
        </div>
        <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
            <div class="row gx-4">
                <div class="col-auto">
                    <div class="avatar avatar-xl position-relative">
                        <img src="{{asset('theme/assets/mes_images/logo_capital_investment.svg')}}" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                    </div>
                </div>
                <div class="col-auto my-auto">
                    <div class="h-100">
                        <h5 class="mb-1">
                            Capital Investment Asset
                        </h5>
                        <p class="mb-0 font-weight-bold text-sm">
                            Configuration
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container-fluid py-4">
        <div class="row mt-3">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12 col-md-6  mt-4">
                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <h6 class="mb-0">Recovery Found Total <a type="button" data-bs-toggle="modal" data-bs-target="#modal-form-recovery-found-total"><i class="fas fa-pen"></i></a></h6>
                    </div>
                    <div class="card-body p-3">
                        <h6 class="text-uppercase text-body text-xs font-weight-bolder">{{ capitalInvestmentAsset.recoveryFoundTotal | priceInEuros }}</h6>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6  mt-4">
                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <h6 class="mb-0">Total Assets <a type="button" data-bs-toggle="modal" data-bs-target="#modal-form-total-asset"><i class="fas fa-pen"></i></a></h6>
                    </div>
                    <div class="card-body p-3">
                        <h6 class="text-uppercase text-body text-xs font-weight-bolder">{{ capitalInvestmentAsset.totalAsset | priceInEuros }}</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-form-total-asset" tabindex="-1" role="dialog" aria-labelledby="modal-form-earning" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div class="card card-plain">
                        <div class="card-header pb-0 text-left">
                            <h3 class="font-weight-bolder text-info text-gradient"></h3>
                            <p class="mb-0">Edit Total Asset Amount</p>
                        </div>
                        <div class="card-body">
                            {{ form_start(formTotalAsset) }}

                            {{ form_widget(formTotalAsset) }}
                            <button type="submit" class="btn btn-info">Edit</button>
                            {{ form_end(formTotalAsset) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-form-recovery-found-total" tabindex="-1" role="dialog" aria-labelledby="modal-form-earning" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div class="card card-plain">
                        <div class="card-header pb-0 text-left">
                            <h3 class="font-weight-bolder text-info text-gradient"></h3>
                            <p class="mb-0">Edit Recovery Found Total Amount</p>
                        </div>
                        <div class="card-body">
                            {{ form_start(formRecoveryFound) }}

                            {{ form_widget(formRecoveryFound) }}
                            <button type="submit" class="btn btn-info">Edit</button>
                            {{ form_end(formRecoveryFound) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}