{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12 mb-3">
                <a class="btn btn-dark" href="{{ path('admin_study_case_list') }}"><i class="fas fa-arrow-left"></i> Return</a>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-end">

                            <a class="btn btn-dark" href="{{ path('admin_study_case_edit',{'id': studyCase.id}) }}"><i class="fas fa-pen"></i> Edit Study Case</a>
                        </div>

                        <div class="row">
                            <div class="col-xl-5 col-lg-6 text-center">
                                <img class="w-100 border-radius-lg shadow-lg mx-auto" src="{{ studyCase.imagePath }}" alt="{{ studyCase.name }}">
                            </div>
                            <div class="col-lg-5 mx-auto">
                                <h3 class="mt-lg-0 mt-4">{{ studyCase.name }}</h3>

                                <h6 class="mb-0 mt-3">{{ studyCase.theme.name }}</h6>
                                <h5>{{ studyCase.price / 100 }} â‚¬</h5>

                                <label class="mt-4">Description</label>
                                {{ studyCase.description | raw }}
                                <div class="row mt-4">
                                    <div class="col-lg-5">
                                        <a href="{{ path('admin_study_case_download_pdf',{'id': studyCase.id}) }}" class="btn bg-gradient-info mb-0 mt-lg-auto w-100" type="button" name="button"><i class="fas fa-cloud-download-alt"></i> Download PDF</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 pt-2">
                <a class="btn btn-danger"  data-bs-toggle="modal" data-bs-target="#modal-form-delete" >Delete E-book</a>
            </div>



        </div>
    </div>

    <div class="modal fade" id="modal-form-delete" tabindex="-1" role="dialog" aria-labelledby="modal-form-delete" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div class="card card-plain">
                        <div class="card-header pb-0 text-left">
                            <h3 class="font-weight-bolder text-info text-gradient">DELETE E-BOOK</h3>
                            <p class="mb-0">Are you sure ?</p>
                        </div>

                        <div class="card-body">
                            <a class="btn btn-danger" href="{{ path('admin_study_case_delete',{'id': studyCase.id}) }}">
                                YES , DELETE
                            </a>
                            <button class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}