{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            {% include "shared/_messages_flash.html.twig" %}
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-secondary" href="{{ path('admin_youtube_video_list') }}"><i class="fas fa-arrow-circle-left"></i> Back to list</a>
                            <a class="btn btn-dark" href="{{ path('admin_youtube_video_edit',{'id': video.id}) }}"><i class="fas fa-pent"></i> Edit the video</a>
                        </div>

                        <div class="row">
                            <div class="col-12 text-center">
                                <iframe class="w-100" height="450"  src="https://www.youtube.com/embed/{{ video.pathToFile }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="col-12 mx-auto">
                                <h3 class="mt-lg-0 mt-4">{{ video.name }}</h3>

                                <h6 class="mb-0 mt-3">{{ video.theme.name }}</h6>

                                <label class="mt-4">Description</label>
                                {{ video.description | raw }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>





{% endblock %}