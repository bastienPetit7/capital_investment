<div class="row">
    <div class="col-lg-10 position-relative z-index-2">
        <div class="card card-plain mb-4">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="d-flex flex-column h-100">
                            <h2 class="font-weight-bolder mb-0">Statistics General</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {% if wallets | length > 1 %}
            <div class="col-lg-10 col-sm-10">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold"> All your contracts</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% for w in wallets %}
                                            <a class="btn btn-info" href="{{ path('investor_home',{'idWallet' : w.id }) }}"> Consult : {{ w.name }}</a>
                                        {% endfor %}
                                        <span class="text-danger text-sm font-weight-bolder"></span>
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% endif %}
            <div class="col-lg-10 col-sm-10">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold"> Wallet Name</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {{ wallet.name }}
                                        <span class="text-danger text-sm font-weight-bolder"></span>
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-5 col-sm-5">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold"> Initial Wallet</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% if wallet.currency is same as "€" %}
                                            {{ wallet.initialAmount | priceInEuros }}
                                        {% elseif wallet.currency is same as "$" %}
                                            {{ wallet.initialAmount | priceInDollar }}
                                        {% elseif wallet.currency is same as "CHF" %}
                                            {{ wallet.initialAmount | priceInFranc }}
                                        {% endif %}
                                        <span class="text-danger text-sm font-weight-bolder"></span>
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card ">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Interest</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% if wallet.currency is same as "€" %}
                                            {{ wallet.totalInterest | priceInEuros }}
                                        {% elseif wallet.currency is same as "$" %}
                                            {{ wallet.totalInterest | priceInDollar }}
                                        {% elseif wallet.currency is same as "CHF" %}
                                            {{ wallet.totalInterest | priceInFranc }}
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-5 mt-sm-0 mt-4">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Actual Wallet</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% if wallet.currency is same as "€" %}
                                            {{ wallet.actualAmount | priceInEuros }}
                                        {% elseif wallet.currency is same as "$" %}
                                            {{ wallet.actualAmount | priceInDollar }}
                                        {% elseif wallet.currency is same as "CHF" %}
                                            {{ wallet.actualAmount | priceInFranc }}
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card ">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Returns Rate</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {{ returnRate }}%
                                        {# <span class="text-success text-sm font-weight-bolder">+50.3%</span> #}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-5 col-sm-5">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Recovery Found Total</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {{ capitalInvestmentAsset.recoveryFoundTotal | priceInEuros }}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card ">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">CLEO CAPITAL Total Assets</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {{ capitalInvestmentAsset.totalAsset | priceInEuros }}

                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-5 mt-sm-0 mt-4">
                <div class="card  mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Personal recovery found</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% if wallet.currency is same as "€" %}
                                            {{ wallet.interestRecoveryFound | priceInEuros }}
                                        {% elseif wallet.currency is same as "$" %}
                                            {{ wallet.interestRecoveryFound | priceInDollar }}
                                        {% elseif wallet.currency is same as "CHF" %}
                                            {{ wallet.interestRecoveryFound | priceInFranc }}
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card ">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Personal Total Assets</p>
                                    <h5 class="font-weight-bolder mb-0">
                                        {% if wallet.currency is same as "€" %}
                                            {{ wallet.totalActif | priceInEuros }}
                                        {% elseif wallet.currency is same as "$" %}
                                            {{ wallet.totalActif | priceInDollar }}
                                        {% elseif wallet.currency is same as "CHF" %}
                                            {{ wallet.totalActif | priceInFranc }}
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="ni ni-diamond text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>