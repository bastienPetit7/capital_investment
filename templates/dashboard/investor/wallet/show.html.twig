
{% extends "dashboard/investor/base_investor.html.twig" %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12 position-relative z-index-2">
                <div class="card card-plain mb-4">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="d-flex h-100">
                                    <a href="{{ path('investor_wallet_list') }}" class="btn btn-info mb-2"><i class="fas fa-arrow-circle-left"></i> RETURN</a>
                                    <h2 class="font-weight-bolder mb-0">WALLET : {{ widgetTheme.name | upper }}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if widgetsAvailable | length > 0 %}
            <div class="row">
                {% for widget in widgetsAvailable %}
                    <div class="col-12 mt-4">

                        <div class="card bg-gradient-info">
                            <div class="card-header border border-bottom bg-gradient-info">
                                <h5 class="text-white">{{ widget.name }}</h5>
                            </div>
                            <div class="card-body bg-gradient-info">
                                {% include "admin/wallet_widget/widget/_base_widget_trading_view.html.twig" %}
                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-white" style="color: white !important;">No Widget for this theme</p>
        {% endif %}

    </div>



{% endblock %}