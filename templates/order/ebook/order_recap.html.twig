{% extends "base_vitrine.html.twig" %}


{% block body %}


<div class="container-fluid py-4">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <div class="card mb-4">
            <div class="card-header p-3 pb-0">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6>Order Details</h6>
                  
                </div>
            
              </div>
            </div>
            <div class="card-body p-3 pt-0">
              <hr class="horizontal dark mt-0 mb-4">
              <div class="row">
                <div class="col-lg-6 col-md-6 col-12">
                  <div class="d-flex">
                    <div class="w-50 me-3">
                      <img src=" {{book.imagePath}} " class="img-fluid border-radius-lg shadow-lg me-3" alt="product image">
                    </div>
                    <div>
                      <h6 class="text-lg mb-0 mt-2"> {{book.name}} </h6>
                      <p class="text-sm mb-3"> {{book.subTitle}} </p>
                      {# <span class="badge badge-sm bg-gradient-success">Delivered</span> #}
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12 my-auto text-end">
                  <a href=" #" class="btn bg-gradient-info mb-0">Contact Us</a>
                  <p class="text-sm mt-2 mb-0">For more details about our solution please contact us.</p>
                </div>
              </div>
              <hr class="horizontal dark mt-4 mb-4">
              <div class="row">
                
                <div class="col-lg-7 col-md-6 col-12">
                  
                  <h6 class="mb-3 mt-4">Billing Information</h6>
                  <ul class="list-group">
                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                      <div class="d-flex flex-column">
                        <h6 class="mb-3 text-sm">{{user.name}} </h6>
                        <span class="mb-2 text-xs">Company Name: <span class="text-dark font-weight-bold ms-2"> {{user.company}} </span></span>
                        <span class="mb-2 text-xs">Email Address: <span class="text-dark ms-2 font-weight-bold"> {{user.email}} </span></span>
                        <span class="text-xs">Phone Number: <span class="text-dark ms-2 font-weight-bold"> {{user.telephone}} </span></span>
                      </div>
                    </li>
                  </ul>

                  
                </div>
                <div class="col-lg-3 col-12 ms-auto">
                  <h6 class="mb-3">Order Summary</h6>
                  <div class="d-flex justify-content-between">
                    <span class="mb-2 text-sm">
                      Product Price:
                    </span>
                    <span class="text-dark font-weight-bold ms-2"> {{book.price | priceInEuros }} </span>
                  </div>
                  
                  <div class="d-flex justify-content-between mt-4">
                    <span class="mb-2 text-lg">
                      Total:
                    </span>
                    <span class="text-dark text-lg ms-2 font-weight-bold"> {{book.price | priceInEuros }} </span>
                  </div>
                  <div class="d-flex justify-content-end mt-4">
                    

                        <form action="{{ constant('\\App\\Classe\\Monetico\\MoneticoConfig::PAYMENT_PAGE_URL')  }}" class="form" methods="post">
                            {% for key, value in formFields %}
                                
                                <input type="hidden" name="{{key}}" value="{{value}}">
                                
                            {% endfor %}
                                <button type="submit" class="form-control btn border-light btn-lg py-2 px-5 bg-gradient-warning text-bold text-white w-100 " >Pay | {{book.price | priceInEuros }}</button>
                        </form>


                  </div>
                </div>
                <div class="col-12">

                        <h6 class="mb-3">Description</h6>
                  
                  <div class="card card-body border card-plain border-radius-lg d-flex flex-column align-items-start flex-row">
                        {{book.description | raw}}

                  </div>
                
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
     
    </div>





{% endblock %}