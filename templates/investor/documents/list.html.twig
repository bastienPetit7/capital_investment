
{% extends "investor/base_investor.html.twig" %}

{% block body %}

        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 position-relative z-index-2">
                    <div class="card card-plain mb-4">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="d-flex flex-column h-100">
                                        <h2 class="font-weight-bolder mb-0">Documents : {{ type }}</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for document in documents %}
                    <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
                        <div class="card">
                            <img class="card-img-top" src="{{asset('theme/assets/mes_images/logo_capital_investment.svg')}}" style="height: 400px!important;object-fit: cover !important;">
                            <div class="position-relative" style="height: 50px;overflow: hidden;margin-top: -50px;z-index:2;position: relative;">
                                <div class="position-absolute w-100 top-0" style="z-index: 1;">
                                    <svg class="waves waves-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 40" preserveAspectRatio="none" shape-rendering="auto">
                                        <defs>
                                            <path id="card-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
                                        </defs>
                                        <g class="moving-waves">
                                            <use xlink:href="#card-wave" x="48" y="-1" fill="rgba(255,255,255,0.30"></use>
                                            <use xlink:href="#card-wave" x="48" y="3" fill="rgba(255,255,255,0.35)"></use>
                                            <use xlink:href="#card-wave" x="48" y="5" fill="rgba(255,255,255,0.25)"></use>
                                            <use xlink:href="#card-wave" x="48" y="8" fill="rgba(255,255,255,0.20)"></use>
                                            <use xlink:href="#card-wave" x="48" y="13" fill="rgba(255,255,255,0.15)"></use>
                                            <use xlink:href="#card-wave" x="48" y="16" fill="rgba(255,255,255,0.99)"></use>
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            <div class="card-body">
                                <h4>
                                    {{ document.fileName }}
                                </h4>
                                <p>
                                    Created at : {{ document.createdAt | date('d-M-Y') }}
                                </p>
                                <p>
                                    Type : {{ type }}
                                </p>

                                <a href="{{ path('investor_document_download',{'id': document.id}) }}" class="btn btn-dark mb-0 w-100"><i class="fas fa-cloud-download-alt"></i> Download</a>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>

{% endblock %}